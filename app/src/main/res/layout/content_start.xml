<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#eff6fc"
    tools:context=".StartActivity">

    <LinearLayout
        android:id="@+id/firstFridgeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e3f2fd"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/leftUpperFridge"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="false"
            android:background="#64dd17"
            android:layout_marginRight="8dp"
            android:onClick="openVegetableContent"
            android:padding="10dp"
            android:focusable="true">

            <ImageButton
                android:id="@+id/imageButtonGemüse"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="top|center"
                android:clickable="false"
                android:contextClickable="false"
                tools:ignore="ContentDescription"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:focusable="false" />

            <bjoernbinzer.myvirtualfridge.CategoryTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/gemueseText"
                android:id="@+id/textView1"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="false"
                android:textColor="#5d4037"
                android:gravity="bottom|center"
                android:layout_margin="2dp"
                android:clickable="false"
                android:visibility="visible"
                android:layout_weight="1"
                android:contextClickable="false"
                android:focusable="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/leftUpperMiddleFridge"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="false"
            android:background="#fdbc0a"
            android:padding="8dp"
            android:onClick="openFruitContent"
            android:nestedScrollingEnabled="true"
            android:focusable="true">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="top|center"
                android:layout_weight="1"
                tools:ignore="ContentDescription"
                android:background="@drawable/banane"
                android:layout_marginBottom="5dp"
                android:clickable="false"
                android:contextClickable="false"
                android:focusable="false" />

            <bjoernbinzer.myvirtualfridge.CategoryTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Obst"
                android:id="@+id/textView2"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="false"
                android:textColor="#5d4037"
                android:gravity="bottom|center"
                android:layout_margin="2dp"
                android:clickable="false"
                android:contextClickable="false"
                android:focusable="false" />
        </LinearLayout>

                <LinearLayout
                    android:id="@+id/rightUpperMiddleFridge"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="false"
                    android:background="#d50000"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:focusable="true">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton2"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/fischfleisch"
                        android:focusable="false" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Fleisch und Fisch"
                        android:id="@+id/textView3"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:focusable="false" />

                </LinearLayout>

            </LinearLayout>

    <LinearLayout
        android:id="@+id/upperSpaceSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccdfee" >

        <Space
            android:layout_width="20px"
            android:layout_height="30px" />
    </LinearLayout>

    <LinearLayout
                android:id="@+id/secondFridgeRow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
            android:layout_weight="1"
        android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#03a9f4"
                    android:layout_marginRight="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="top|center"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Getränke"
                        android:id="@+id/textView4"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#ce93d8"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton5"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Gewürze"
                        android:id="@+id/textView5"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#00e5ff"
                    android:layout_marginLeft="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton6"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gefrier" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Tiefkühl"
                        android:id="@+id/textView6"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
                android:id="@+id/middleSpaceSection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:background="#ccdfee"
            android:baselineAligned="false">

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/thirdFridgeRow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3"
            android:layout_weight="1"
            android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/MilchUndEierLayout"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#cddc39"
                    android:layout_marginRight="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/MilchUndEierImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="top|center"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/textView7"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp"
                        android:text="Saucen, Dressings, Öle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/GetreideLayout"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#ffff00"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/getreideImageButton"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/getreideText"
                        android:id="@+id/textView8"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leeresLayout"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#ff80ab"
                    android:layout_marginLeft="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton9"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/snackText"
                        android:id="@+id/textView9"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/lowerSpaceSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ccdfee">

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthFridgeRow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="bottom"
            android:baselineAligned="false"
            android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#b0bec5"
                    android:layout_marginRight="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/imageButton10"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="top|center"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Milch- und Eierprodukte"
                        android:id="@+id/textView10"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="#1de9b6"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton11"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Sonstiges"
                        android:id="@+id/textView11"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="#5d4037"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contextClickable="false"
                    android:visibility="visible"
                    android:background="#eff6fc"
                    android:layout_marginLeft="8dp">


                </LinearLayout>
            </LinearLayout>
</LinearLayout>