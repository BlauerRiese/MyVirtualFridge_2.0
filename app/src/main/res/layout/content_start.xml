<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_start"
    tools:context=".StartActivity">


    <LinearLayout
        android:id="@+id/topRow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstFridgeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topRow">

        <LinearLayout
            android:id="@+id/leftUpperFridge"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#4caf50"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/imageButtonGemüse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:clickable="false"
                android:contextClickable="false"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GEMÜSE"
                android:id="@+id/textView5"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/leftUpperMiddleFridge"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#ff8a80"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="FLEISCH &amp; FISCH"
                android:id="@+id/textView2"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightUpperMiddleFridge"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#eeeeee"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="OBST"
                android:id="@+id/textView4"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstFridgeRow"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/secondFridgeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middleSection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#4caf50"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:clickable="false"
                android:contextClickable="false"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GETRÄNKE"
                android:id="@+id/textView3"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#ff8a80"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GEWÜRZE"
                android:id="@+id/textView6"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#eeeeee"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TIEFKÜHL"
                android:id="@+id/textView7"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lowSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondFridgeRow"
        android:layout_margin="10dp" />

    <LinearLayout
        android:id="@+id/thirdFridgeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lowSection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/MilchUndEierLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#eeeeee"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/MilchUndEierImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:clickable="false"
                android:contextClickable="false"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MILCH- &amp; EIER PRODUKTE"
                android:id="@+id/MilchUndEierTextView"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:layout_weight="1"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/GetreideLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#ff8a80"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/getreideImageButton"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GETREIDE-PRODUKTE"
                android:id="@+id/getreideTextView"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/leeresLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:layout_margin="5dp"
            android:background="#ff8a80">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GETREIDE-PRODUKTE"
                android:id="@+id/textView10"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lastSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/thirdFridgeRow" />

    <LinearLayout
        android:id="@+id/fourthFridgeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="bottom"
        android:layout_below="@+id/lastSection">

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#eeeeee"
            android:layout_margin="5dp" >

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:clickable="false"
                android:contextClickable="false"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MILCH- &amp; EIER PRODUKTE"
                android:id="@+id/textView11"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:layout_weight="1"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:background="#ff8a80"
            android:layout_margin="5dp" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton11"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GETREIDE-PRODUKTE"
                android:id="@+id/textView12"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:background="#ff8a80">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton8"
                android:layout_gravity="top|center"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GETREIDE-PRODUKTE"
                android:id="@+id/textView9"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="2"
                android:textColor="#5d4037"
                android:gravity="center_horizontal"
                android:layout_margin="2dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>