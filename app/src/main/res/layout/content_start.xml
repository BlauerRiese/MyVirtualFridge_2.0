<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/background"
    tools:context=".StartActivity">

    <LinearLayout
        android:id="@+id/firstFridgeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e3f2fd"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/linearLayoutVegetables"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="false"
            android:layout_marginRight="8dp"
            android:padding="7dp"
            android:focusable="false"
            android:background="@drawable/roundcornerBox01"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/imageViewVegetables"
                android:layout_weight="2"
                android:layout_gravity="top|center"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/vegetables" />

            <bjoernbinzer.myvirtualfridge.CategoryTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_box01"
                android:id="@+id/textViewVegetables"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="false"
                android:gravity="bottom|center"
                android:clickable="false"
                android:visibility="visible"
                android:layout_weight="1"
                android:contextClickable="false"
                android:focusable="false"
                android:textColor="@color/categoryTextView"
                android:layout_margin="2dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutFruits"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="false"
            android:background="@drawable/roundcornerBox02"
            android:padding="7dp"
            android:nestedScrollingEnabled="true"
            android:focusable="false"
            android:weightSum="4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/imageViewFruits"
                android:layout_weight="3"
                android:layout_gravity="top|center"
                android:background="@drawable/fruits"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp" />

            <bjoernbinzer.myvirtualfridge.CategoryTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_box02"
                android:id="@+id/textViewFruits"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="false"
                android:textColor="@color/categoryTextView"
                android:gravity="bottom|center"
                android:layout_margin="2dp"
                android:clickable="false"
                android:contextClickable="false"
                android:focusable="false"
                android:layout_weight="1" />
        </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutMeat"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="false"
                    android:background="@drawable/roundcornerBox03"
                    android:layout_marginLeft="8dp"
                    android:padding="7dp"
                    android:focusable="false"
                    android:nestedScrollingEnabled="true"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewMeat"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:background="@drawable/meat"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box03"
                        android:id="@+id/textViewMeat"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:focusable="false"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

    <LinearLayout
        android:id="@+id/upperSpaceSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/spaceSection" >

        <Space
            android:layout_width="20px"
            android:layout_height="30px" />
    </LinearLayout>

    <LinearLayout
                android:id="@+id/secondFridgeRow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
            android:layout_weight="1"
        android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/linearLayoutBeverages"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@drawable/roundcornerBox04"
                    android:layout_marginRight="8dp"
                    android:padding="7dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewBeverages"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:background="@drawable/beverages"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box04"
                        android:id="@+id/textViewBeverages"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="1"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSpicery"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@drawable/roundcornerBox05"
                    android:padding="7dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewSpicery"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/spicery" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box05"
                        android:id="@+id/textViewSpicery"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="1"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutFrozen"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@drawable/roundcornerBox06"
                    android:layout_marginLeft="8dp"
                    android:padding="7dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewFrozen"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:background="@drawable/frozen"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box06"
                        android:id="@+id/textViewFrozen"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
                android:id="@+id/middleSpaceSection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:background="@color/spaceSection"
            android:baselineAligned="false">

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/thirdFridgeRow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3"
            android:layout_weight="1"
            android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/linearLayoutDressings"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@drawable/roundcornerBox07"
                    android:layout_marginRight="8dp"
                    android:padding="7dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewDressings"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:background="@drawable/dressings"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/textViewDressings"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="1"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp"
                        android:text="@string/text_box07" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutCereals"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@drawable/roundcornerBox08"
                    android:padding="7dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewCereals"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:background="@drawable/cereal"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box08"
                        android:id="@+id/textViewCereals"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="1"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSnacks"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@drawable/roundcornerBox09"
                    android:layout_marginLeft="8dp"
                    android:padding="7dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewSnacks"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/snacks" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box09"
                        android:id="@+id/textViewSnacks"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="1"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp" />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/lowerSpaceSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/spaceSection">

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthFridgeRow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="bottom"
            android:baselineAligned="false"
            android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayoutMilk"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@drawable/roundcornerBox10"
                    android:layout_marginRight="8dp"
                    android:padding="7dp"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewMilk"
                        android:layout_weight="2"
                        android:layout_gravity="top|center"
                        android:background="@drawable/milk"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box10"
                        android:id="@+id/textViewMilk"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="1"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutOthers"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:contextClickable="true"
                android:background="@drawable/roundcornerBox11"
                android:padding="7dp"
                android:weightSum="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/imageViewOthers"
                    android:layout_weight="2"
                    android:layout_gravity="top|center"
                    android:background="@drawable/others"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp" />

                <bjoernbinzer.myvirtualfridge.CategoryTextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/text_box11"
                    android:id="@+id/textViewOthers"
                    android:layout_gravity="bottom|center"
                    android:textStyle="bold"
                    android:singleLine="false"
                    android:textIsSelectable="false"
                    android:layout_weight="1"
                    android:textColor="@color/categoryTextView"
                    android:gravity="bottom|center"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEmpty"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contextClickable="false"
                android:visibility="visible"
                android:background="#eff6fc"
                android:layout_marginLeft="8dp">
            </LinearLayout>
        </LinearLayout>
</LinearLayout>