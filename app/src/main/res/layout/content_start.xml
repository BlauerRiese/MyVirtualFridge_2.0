<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/background"
    tools:context=".StartActivity">

    <LinearLayout
        android:id="@+id/firstFridgeRow"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e3f2fd"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/linearLayoutVegetables"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="false"
            android:background="@color/box01"
            android:layout_marginRight="8dp"
            android:padding="10dp"
            android:focusable="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/imageViewVegetables"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_gravity="top|center" />

            <bjoernbinzer.myvirtualfridge.CategoryTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_box01"
                android:id="@+id/textViewVegetables"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="false"
                android:textColor="@color/categoryTextView"
                android:gravity="bottom|center"
                android:layout_margin="2dp"
                android:clickable="false"
                android:visibility="visible"
                android:layout_weight="1"
                android:contextClickable="false"
                android:focusable="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutFruits"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="false"
            android:background="@color/box02"
            android:padding="8dp"
            android:onClick="openFruitContent"
            android:nestedScrollingEnabled="true"
            android:focusable="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/imageViewFruits"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_gravity="top|center" />

            <bjoernbinzer.myvirtualfridge.CategoryTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_box02"
                android:id="@+id/textViewFruits"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:singleLine="false"
                android:textIsSelectable="false"
                android:textColor="@color/categoryTextView"
                android:gravity="bottom|center"
                android:layout_margin="2dp"
                android:clickable="false"
                android:contextClickable="false"
                android:focusable="false" />
        </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutMeat"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="false"
                    android:background="@color/box03"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:focusable="false"
                    android:nestedScrollingEnabled="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewMeat"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="top|center" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box03"
                        android:id="@+id/textViewMeat"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:focusable="false" />

                </LinearLayout>

            </LinearLayout>

    <LinearLayout
        android:id="@+id/upperSpaceSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/spaceSection" >

        <Space
            android:layout_width="20px"
            android:layout_height="30px" />
    </LinearLayout>

    <LinearLayout
                android:id="@+id/secondFridgeRow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
            android:layout_weight="1"
        android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/linearLayoutBeverages"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box04"
                    android:layout_marginRight="8dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewBeverages"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="top|center" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box04"
                        android:id="@+id/textViewBeverages"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSpicery"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box05"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewSpicery"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="top|center" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box05"
                        android:id="@+id/textViewSpicery"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box06"
                    android:layout_marginLeft="8dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageViewFrozen"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="top|center" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton6"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gefrier" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box06"
                        android:id="@+id/textViewFrozen"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
                android:id="@+id/middleSpaceSection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:background="@color/spaceSection"
            android:baselineAligned="false">

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/thirdFridgeRow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3"
            android:layout_weight="1"
            android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/MilchUndEierLayout"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box07"
                    android:layout_marginRight="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/MilchUndEierImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="top|center"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/textView7"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp"
                        android:text="@string/text_box07" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/GetreideLayout"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box08"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/getreideImageButton"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box08"
                        android:id="@+id/textView8"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/leeresLayout"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box09"
                    android:layout_marginLeft="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton9"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box09"
                        android:id="@+id/textView9"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/lowerSpaceSection"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/spaceSection">

            <Space
                android:layout_width="20px"
                android:layout_height="30px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthFridgeRow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:gravity="bottom"
            android:baselineAligned="false"
            android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box10"
                    android:layout_marginRight="8dp"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/imageButton10"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="top|center"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box10"
                        android:id="@+id/textView10"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:background="@color/box11"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/imageButton11"
                        android:layout_gravity="top|center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:padding="12dp"
                        android:layout_marginBottom="5dp" />

                    <bjoernbinzer.myvirtualfridge.CategoryTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/text_box11"
                        android:id="@+id/textView11"
                        android:layout_gravity="bottom|center"
                        android:textStyle="bold"
                        android:singleLine="false"
                        android:textIsSelectable="false"
                        android:layout_weight="2"
                        android:textColor="@color/categoryTextView"
                        android:gravity="bottom|center"
                        android:layout_margin="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contextClickable="false"
                    android:visibility="visible"
                    android:background="#eff6fc"
                    android:layout_marginLeft="8dp">


                </LinearLayout>
            </LinearLayout>
</LinearLayout>