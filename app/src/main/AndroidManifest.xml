<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bjoernbinzer.myvirtualfridge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fridge"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddFridgeItem"
            android:label="@string/title_activity_add_fridge_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".VegetableContent" />
        <activity android:name=".FruitContent" />
        <activity android:name=".MeatFishContent" />
        <activity
            android:name=".ItemList"
            android:label="@string/title_activity_item_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
